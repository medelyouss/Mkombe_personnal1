{% extends 'base.html.twig' %}

{% block title %}Inscription {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#
    <link href="{{ asset('medel_website_assets/css/plugins/iCheck/custom.css') }}" rel="stylesheet">
    <link href="{{ asset('medel_website_assets/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}" rel="stylesheet">
    #}
{% endblock %}

{% block body %}
<section class="mkombe-gray-section">
    <div class="container m-t-xl">

        <div class="card-body m-t-xl">
            <div class="col-md-12" >
                <div class="ibox">
                    <div class="ibox-content b-r-md">
                        <div class="row">
                            <div class="col-sm-6 b-r">
                                <h1 class="m-t-none m-b">Pas encore de compte?</h1>
                                {% for flash_error in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                                <p class="m-b-lg">je m'inscris.</p>
                                {{ form_start(form) }}

                                <div class="form-group {% if form_errors(form.username) %}has-error{% endif %}">
                                    <label>Nom d'utilisateur <i class="text-muted">*</i></label>
                                    {{ form_row(form.username, {
                                        "attr" : {
                                            'class' : 'form-control p-lg b-r-md',
                                            'placeholder' : "Nom d'utilisateur"
                                        },
                                        'label' : false
                                    }) }}
                                </div>

                                    <div class="form-group">
                                        <label>Email <i class="text-muted">*</i></label>
                                        {{ form_row(form.email, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md',
                                                'placeholder' : "Votre e-mail"
                                            },
                                            'label' : false
                                        }) }}
                                    </div>

                                    {#
                                    <div class="form-group">
                                        <label>Nom Prénom <i class="text-muted">*</i></label>
                                        {{ form_row(form.nomPrenom, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Ville <i class="text-muted">*</i></label>
                                        {{ form_row(form.ville, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    #}

                                    <div class="form-group">
                                        <label>Mot de passe<i class="text-danger">*</i></label>
                                        {{ form_row(form.plainPassword.first, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md',
                                                'placeholder' : "Mot de passe"
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Confirmer le mot de passe <i class="text-danger">*</i></label>
                                        {{ form_row(form.plainPassword.second, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md',
                                                'placeholder' : "Retapez le mot de passe"
                                            },
                                            'label' : false
                                        }) }}
                                    </div>

                                    <div>
                                       {# <button type="submit" class="btn">Valider</button>#}
                                        <button class="btn btn-warning btn-block" type="submit">
                                            <strong class="text-gray-dark">je m'inscris</strong>
                                        </button>
                                        {#<label> <input type="checkbox" class="i-checks"> Remember me </label>#}
                                    </div>
                                {{ form_end(form) }}
                            </div>

                            <div class="col-sm-6 text-center"><h1>J'ai déjà un compte,</h1>
                                <p><a href="{{ path('auth_login') }}">Je me connecte</a></p>
                                <p class="text-center" style="font-size: 150px; color: red">
                                    <a href="{{ path('auth_login') }}" >
                                        <i class="fa fa-lock" ></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
{% endblock %}


