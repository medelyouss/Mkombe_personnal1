<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}"
      onsubmit="return confirm('Action irreversible, Continuer?');" style="display: inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-xs btn-danger btn-outline"><i class="fa fa-trash"></i></button>
</form>
