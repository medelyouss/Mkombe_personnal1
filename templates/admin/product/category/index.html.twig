{% extends 'admin/base.html.twig' %}

{% block title %} {{ parent() }}{% endblock %}

{% block body %}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        {# Messages Flash #}
        {% for message in app.flashes('success') %}
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissable ">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        {#===========================================================#}
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Catégories

                        <span class="pull-right">
                        <a href="{{ path('productcategory_new') }}">Ajouter une catégorie</a>
                    </span>
                    </h4>

                </div>

                <div class="panel-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Designation</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for productcategory in productcategories %}
                            <tr>
                                <td>{{ productcategory.id }}</td>
                                <td>{{ productcategory.designation }}</td>
                                <td>
                                    <a href="{{ path('productcategory_show', {'id': productcategory.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="{{ path('productcategory_edit', {'id': productcategory.id}) }}" class="btn btn-warning btn-circle">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
