{% extends 'admin/base.html.twig' %}

{% block title %}Produits {{ parent() }}{% endblock %}

{% block body %}
<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">

                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12 m-b-md">
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle"><i class="fa fa-plus"></i> produit <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('product_new', {'product_type' : "mshadhari"}) }}">+ Mshadhari</a></li>
                                    <li><a href="#">+ Draps</a></li>
                                    <li><a href="#">+ chaussures</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">+ produit générique</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    {#
                    A décommenter pour activer la recherche de produit
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="product_name">Project Name</label>
                                <input type="text" id="product_name" name="product_name" value="" placeholder="Project Name" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="control-label" for="price">Name</label>
                                <input type="text" id="price" name="price" value="" placeholder="Name" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="control-label" for="quantity">Company</label>
                                <input type="text" id="quantity" name="quantity" value="" placeholder="Company" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="status">Status</label>
                                <select name="status" id="status" class="form-control">
                                    <option value="1" selected="">Completed</option>
                                    <option value="0">Pending</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    #}

                    <div class="table-responsive">
                        <table class="table table-striped hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Désignation</th>
                                <th>Ajouté le </th>
                                <th>Catégorie(s)</th>
                                <th>Prix</th>
                                <th><i class="fa fa-image"></i> </th>
                                <th>#</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                            <tr>
                                <td>{{ loop.index }}</td>


                                <td>{{ product.designation }}</td>
                                <td>{{ product.dateCreatedAt ? product.dateCreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>#</td>
                                <td>{{ product.price }}</td>

                                <td><a href="#">
                                        {{ product.getImages() | length }}
                                    </a>
                                </td>

                                {#
                                <td><a href="#">
                                        <i class="fa fa-check text-navy"></i></a>
                                </td>
                                #}

                                <td>
                                    <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-xs btn-outline btn-primary">
                                        <i class="fa fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-xs btn-outline btn-warning">
                                        <i class="fa fa-edit text-warning"></i> Editer
                                    </a>
                                    {{ include('admin/product/_delete_form.html.twig') }}
                                </td>

                            </tr>

                                {% else %}
                                <tr>
                                    <td>
                                        Aucun enregistrement!
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
